<!-- Layout for a single list item in the list of pets -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="2/22/2202"
                        android:fontFamily="serif"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#2B3D4D"  />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E3F2FD"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="4"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="الصلوات المفروضة " />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="أذكار الصلوات" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="سنن الصلوات" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="أذكار الصباح" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="أذكار المساء" />

                           </LinearLayout>

                       </LinearLayout>



                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_sa"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_az_sa"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_so"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_az_sab"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_az_mas"
                                   android:text="0%" />
                           </LinearLayout>


                       </LinearLayout>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="2dp"
                           android:background="#E3F2FD"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="صلاة الضحى" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:textColor="#000000"
                                   android:text="ورد القرآن" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="الوضوء قبل النوم" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_marginRight="4dp"
                                   android:textColor="#000000"
                                   android:text="أذكار قبل النوم" />

                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E3F2FD"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:textColor="#000000"
                                   android:text="صلاة الوتر" />

                           </LinearLayout>

                       </LinearLayout>



                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_sa_do"
                                   android:text="0%" />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="  "/>
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_q"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_wod"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_az_na"
                                   android:text="0%" />
                           </LinearLayout>
                           <View
                               android:layout_width="2dp"
                               android:layout_height="match_parent"
                               android:background="#E0E0E0"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_gravity="center"
                                   android:id="@+id/tv_sa_wet"
                                   android:text="0%" />
                           </LinearLayout>


                       </LinearLayout>


                   </LinearLayout>
                </LinearLayout>


            </LinearLayout>



            <View
                android:layout_width="2dp"
                android:background="#E3F2FD"
                android:layout_height="match_parent"/>



    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="12%"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#000000"  />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>